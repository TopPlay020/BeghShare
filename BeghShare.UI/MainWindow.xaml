<Window
    x:Class="BeghShare.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeghShare.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="520"
    d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
    ResizeMode="NoResize"
    ThemeMode="Dark"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="auto,*" RowDefinitions="*,auto">
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="5,5,5,5">
            <Grid RowDefinitions="auto,*">
                <Grid
                    Grid.Row="0"
                    ColumnDefinitions="50,150"
                    RowDefinitions="*,*">
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Resources/Media/pointer.png" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="BeghShare" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Opacity="0.7"
                        TextAlignment="Center">
                        Keyboard + Mouse<LineBreak />
                        Clipboard</TextBlock>
                </Grid>
                <Grid Grid.Row="1">
                    <Border Padding="0,20,0,10">
                        <ItemsControl ItemsSource="{Binding SideMenuItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="0,0,0,5"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Command="{Binding Command}"
                                        CommandParameter="{Binding PageType}">
                                        <Grid HorizontalAlignment="Stretch" ColumnDefinitions="50,*">
                                            <Viewbox
                                                Grid.Column="0"
                                                Width="40"
                                                Height="40">
                                                <TextBlock
                                                    Margin="10"
                                                    FontFamily="{DynamicResource FontAwesome}"
                                                    Text="{Binding Icon}" />
                                            </Viewbox>
                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Text="{Binding Title}" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Grid>
        </Border>
        <Border
            Grid.Column="1"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="10,0,0,10">
            <ContentPresenter Content="{Binding CurrentPage}" />
        </Border>
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,2"
            ColumnDefinitions="*,auto">
            <Grid Grid.Column="0" Width="200" />
            <StackPanel
                Grid.Column="1"
                Opacity="0.7"
                Orientation="Horizontal">
                <StackPanel Margin="10,0" Orientation="Horizontal">
                    <TextBlock Text="Keyboard:" />
                    <TextBlock
                        Width="80"
                        Text="{Binding KeyDownText}"
                        TextAlignment="Center" />
                </StackPanel>
                <Border
                    BorderBrush="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="1" />
                <StackPanel Margin="10,0" Orientation="Horizontal">
                    <TextBlock Text="X:" />
                    <TextBlock
                        Width="40"
                        Text="{Binding MouseX}"
                        TextAlignment="Center" />
                </StackPanel>
                <Border
                    BorderBrush="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="1" />
                <StackPanel Margin="10,0" Orientation="Horizontal">
                    <TextBlock Text="Y:" />
                    <TextBlock
                        Width="40"
                        Text="{Binding MouseY}"
                        TextAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
