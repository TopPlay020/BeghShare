<UserControl
    x:Class="BeghShare.UI.Pages.DiscoveryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:BeghShare.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeghShare.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:DiscoveryPageViewModel}"
    d:DesignHeight="412"
    d:DesignWidth="575"
    mc:Ignorable="d">
    <Grid Margin="10" RowDefinitions="auto,5,auto,5,*">
        <Grid Grid.Row="0" ColumnDefinitions="*,5,auto">
            <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                d:Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                IsHitTestVisible="False"
                Opacity="0.5"
                Text="IP Addresse: XXXX.XXXX.XXXX.XXXX"
                Visibility="{Binding SearchText, Converter={conv:NullOrEmptyToVisibilityConverter}, ConverterParameter=inverse}" />
            <Button
                Grid.Column="2"
                VerticalAlignment="Stretch"
                Command="{Binding SearchCommand}"
                IsEnabled="{Binding CanDiscover}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search" />
                    <TextBlock
                        Margin="5,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource FontAwesome}"
                        Text="&#xf002;" />
                </StackPanel>
            </Button>
        </Grid>
        <Button
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Command="{Binding DiscoveryCommand}"
            IsEnabled="{Binding CanDiscover}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Network Discovery" />
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource FontAwesome}"
                    Text="&#xe695;" />
            </StackPanel>
        </Button>
        <StackPanel Grid.Row="4">
            <!--  Header Row  -->
            <Border Margin="0,0,0,2" Padding="5">
                <Grid ColumnDefinitions="*,2*,*">

                    <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Name" />
                    <TextBlock
                        Grid.Column="1"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="IP" />
                    <TextBlock
                        Grid.Column="2"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Actions"
                        TextAlignment="Center" />
                </Grid>
            </Border>

            <!--  Items  -->
            <ItemsControl ItemsSource="{Binding PeerTableItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,2"
                            Padding="5"
                            BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,2*,*">
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{Binding IP}" />
                                <Button
                                    Grid.Column="2"
                                    Padding="5,2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Command="{Binding DataContext.ConnectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center" Text="Connect" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{DynamicResource FontAwesome}"
                                            Text="&#xf1e6;" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>



    </Grid>
</UserControl>
